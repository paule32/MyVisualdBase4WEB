	<script>
		function scrollToAnchor(aid) {
			var aTag = $("a[name='"+ aid +"']");
			$('html,body').animate({scrollTop: aTag.offset().top},'slow');
		}
		$(document).ready(function(){
			$("[ank=impress]").click(function(){
				scrollToAnchor("impress");  
			});
		});
